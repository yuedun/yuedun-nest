<!-- 滚动banner -->
<div class="home-banner-container">
    <div id="focus-banner">
        <ul class="banner-list" id="focus-banner-list">
            {% for element in component.elements %}
                <li>
                    <img class="banner-img" src="{{element.img}}">
                </li>
            {% endfor %}
        </ul>
        <ul class="focus-bubble" id="focus-bubble">
            {% for element in component.elements %}
                <li><span></span></li>
            {% endfor %}
        </ul>
    </div>
</div>
<!-- /滚动banner -->